<div class="app-wrapper">
  <div class="app-content pt-3 p-md-3 p-lg-4">
    <div class="container-xl">

      <h1 class="app-page-title">Welcome to the attendance management portal</h1>
      <%= link_to "Check In", checked_in_path, class: "btn btn-primary" %>
      <%= link_to "Check Out", checked_out_path, class: "btn btn-primary" %>

      <div class="tab-content" id="orders-table-tab-content">
        <div class="tab-pane fade show active" id="orders-all" role="tabpanel" aria-labelledby="orders-all-tab">
          <div class="app-card app-card-orders-table shadow-sm mb-5">
            <div class="app-card-body">
              <div class="table-responsive">
                <table class="table app-table-hover mb-0 text-left">
                  <thead>
                  <tr>
                    <th class="cell">Date</th>
                    <th class="cell">Name</th>
                    <th class="cell">Check In</th>
                    <th class="cell">Check Out</th>
                  </tr>
                  </thead>
                  <tbody>
                  <tr>
                    <% @attendances.all.each do |attendance| %>
                      <td class="cell"><%= attendance.check_in_time.present? ? attendance.check_in_time&.strftime("%a %d-%m-%y") : attendance.check_out_time&.strftime("%a %d-%m-%y") %></td>
                      <td class="cell"><%= attendance.user.first_name %></td>
                      <td class="cell"><span class="truncate"><%= attendance.check_in_time %></span></td>
                      <td class="cell"><%= attendance.check_out_time %></td>
                      </tr>
                    <% end %>
                    </tbody>
                </table>
                <div class="container"
                <%= will_paginate @attendances %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>


