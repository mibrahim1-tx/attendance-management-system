<div class="app-wrapper">

  <div class="app-content pt-3 p-md-3 p-lg-4">
    <div class="container-xl">
      <div class="row g-3 mb-4 align-items-center justify-content-between">
        <div class="col-auto">
          <h1 class="app-page-title mb-0">Users</h1>
        </div>
      </div>


      <div class="tab-content" id="orders-table-tab-content">
        <div class="tab-pane fade show active" id="orders-all" role="tabpanel" aria-labelledby="orders-all-tab">
          <div class="app-card app-card-orders-table shadow-sm mb-5">
            <div class="app-card-body">
              <div class="table-responsive">
                <table class="table app-table-hover mb-0 text-left">
                  <thead>
                  <tr>
                    <th class="cell">ID</th>
                    <th class="cell">Email</th>
                    <th class="cell">Phone Number</th>
                    <th class="cell">Company</th>
                    <th class="cell">Role</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td class="cell"><%= user.id %></td>
                      <td class="cell"><span class="truncate"><%= user.email %></span></td>
                      <td class="cell"><%= user.phone_number %></td>
                      <td class="cell"><span class="note"><%= user.company_name %></span></td>
                      <td class="cell"><span class="badge bg-success"><%= user.role %></span></td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
